{
    "manifest_version": 3,
    "name": "Website Color Analyzer",
    "version": "1.1",
    "description": "Extracts, saves, and analyzes the most used colors on a webpage.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    }
}